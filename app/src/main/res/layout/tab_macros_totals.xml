<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pullToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="50"
                android:gravity="end"
                android:text="@string/DateLabel" />

            <TextView
                android:id="@+id/editDate"
                style="@style/editableTextView"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:ems="8"
                android:layout_weight="50"
                android:enabled="false"
                tools:text="10/05/20" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:name="tab_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                style="@style/CardViewTitle"
                                android:text="@string/calories_label" />

                            <TextView
                                android:id="@+id/caloriesAmount"
                                style="@style/PrimaryWeightMeasure"
                                android:text="# KCals"
                                tools:text="70.5" />

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/caloriesGraph"
                                style="@style/MiniPieChart"
                                android:clickable="false"
                                android:focusable="false" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                style="@style/CardViewTitle"
                                android:text="@string/carbs_label" />

                            <TextView
                                android:id="@+id/carbsInput"
                                style="@style/PrimaryWeightMeasure"
                                android:title="@string/carbs_label"
                                tools:text="50.9" />

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/carbsGraph"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="0dp"
                                android:minHeight="50dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                style="@style/CardViewTitle"
                                android:text="@string/protein_label" />

                            <TextView
                                android:id="@+id/musclesInput"
                                style="@style/PrimaryWeightMeasure"
                                android:layout_height="wrap_content"
                                android:title="@string/protein_label"
                                tools:text="20.2" />

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/proteinGraph"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="5dp"
                                android:minHeight="50dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:minWidth="70dp"
                        android:minHeight="70dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                style="@style/CardViewTitle"
                                android:text="@string/fat_label" />

                            <TextView
                                android:id="@+id/fatsInput"
                                style="@style/PrimaryWeightMeasure"
                                android:title="@string/fat_label"
                                tools:text="20.5" />

                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/fatsGraph"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="0dp"
                                android:minHeight="50dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
