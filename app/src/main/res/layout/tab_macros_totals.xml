<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pullToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/date_entry_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:textSize="24sp"
                android:gravity="start"
                android:text="@string/DateLabel" />

            <TextView
                android:id="@+id/editDate"
                style="@style/editableTextView"
                android:layout_width="wrap_content"
                android:textSize="24sp"
                android:enabled="true"
                android:gravity="start"
                android:layout_marginLeft="5dp"
                tools:text="10/05/20" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/first_row_layout"
            android:layout_below="@+id/date_entry_layout"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:minWidth="70dp"
                android:minHeight="70dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardViewTitle"
                        android:text="@string/calories_label" />

                    <TextView
                        android:id="@+id/caloriesAmount"
                        style="@style/PrimaryWeightMeasure"
                        android:text="# KCals"
                        tools:text="70.5" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/caloriesGraph"
                        style="@style/MiniPieChart"
                        android:clickable="false"
                        android:focusable="false" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:minWidth="70dp"
                android:minHeight="70dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardViewTitle"
                        android:text="@string/carbs_label" />

                    <TextView
                        android:id="@+id/carbsAmount"
                        style="@style/PrimaryWeightMeasure"
                        android:text="Carbs (g)"
                        tools:text="70.5" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/carbsGraph"
                        style="@style/MiniPieChart"
                        android:clickable="false"
                        android:focusable="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/second_row_layout"
            android:layout_below="@+id/first_row_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:minWidth="70dp"
                android:minHeight="70dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardViewTitle"
                        android:text="@string/protein_label" />

                    <TextView
                        android:id="@+id/proteinAmount"
                        style="@style/PrimaryWeightMeasure"
                        android:text="Protein (g)"
                        tools:text="70.5" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/proteinGraph"
                        style="@style/MiniPieChart"
                        android:clickable="false"
                        android:focusable="false" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:minWidth="70dp"
                android:minHeight="70dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardViewTitle"
                        android:text="@string/fat_label" />

                    <TextView
                        android:id="@+id/fatsAmount"
                        style="@style/PrimaryWeightMeasure"
                        android:text="Fats (g)"
                        tools:text="70.5" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/fatsGraph"
                        style="@style/MiniPieChart"
                        android:clickable="false"
                        android:focusable="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
